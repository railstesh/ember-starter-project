<!-- app/templates/posts.hbs -->
<h1>Expert Advice</h1>
<h5>Ask a Quesiton</h5>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title class="form-control" placeholder="enter title of question"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{input type="text" value=model.description class="form-control" placeholder="Describe the question"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Tags</label>
    <div class="col-sm-10">
      {{input type="text" value=model.tags class="form-control" placeholder="tags name with coma seperated"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'savePost' model}}>Post a question</button>
    </div>
  </div>
</div>

 